extends ../layout

block content

  h1(class="text-danger page-header") I GOTS TEAS MANGE!

  table(class="table")
    thead
      th Name
      th Country
      th Price
      th Reorderable
    tbody
      each tea in teas
        tr
          td= tea.name
          td #{tea.country}
          td= tea.price
          td= tea.reorderable ? "YES!" : "NO :("
